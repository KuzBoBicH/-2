using System;

class Program
{
    static void Main()
    {
        double m, v, h, E, P;

        Console.Write("Введіть масу тіла (кг): ");
        m = double.Parse(Console.ReadLine());

        Console.Write("Введіть швидкість тіла (м/с): ");
        v = double.Parse(Console.ReadLine());

        Console.Write("Введіть висоту, на якій знаходиться тіло (м): ");
        h = double.Parse(Console.ReadLine());

        E = m * Math.Pow(v, 2) / 2;
        P = m * 9.81 * h;

        Console.WriteLine("Кінетична енергія тіла: {0} Дж", E);
        Console.WriteLine("Потенційна енергія тіла: {0} Дж", P);

        Console.ReadKey();
    }
}
